<?xml version="1.0" encoding="utf-8"?>
<SCEPTRE>
    <field-device>
        <name>rtu-1</name>
        <cycle-time>500</cycle-time>
        <tags>
            <external-tag>
                <name>tank3-powered</name>
                <io>I3</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>tank1-temperature</name>
                <io>I1</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>tank3-powered-toggle</name>
                <io>O0</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>tank1-temperature-setpoint</name>
                <io>O3</io>
                <type>analog</type>
            </external-tag>
        </tags>

        <comms>
            <dnp3-server>
		<endpoint>tcp://127.0.0.1:20000</endpoint>
                <address>10</address>
                <event-logging>rtu-1-dnp3-server.log</event-logging>
                <binary-input>
                    <address>0</address>
                    <tag>tank3-powered</tag>
                </binary-input>
                <binary-output>
                    <address>1</address>
                    <tag>tank3-powered-toggle</tag>
                </binary-output>
                <analog-input>
                    <address>0</address>
                    <tag>tank1-temperature</tag>
                </analog-input>
                <analog-output>
                    <address>1</address>
                    <tag>tank1-temperature-setpoint</tag>
                </analog-output>
            </dnp3-server>
        </comms>

        <input>
            <endpoint>udp://239.0.0.1:40000</endpoint>
            <analog>
                <id>I0</id>
                <name>tank-3.tank_level</name>
            </analog>
            <analog>
                <id>I1</id>
                <name>tank-1.temperature</name>
            </analog>
            <binary>
                <id>I2</id>
                <name>tank-2.powered</name>
            </binary>
            <binary>
                <id>I3</id>
                <name>tank-3.powered</name>
            </binary>
        </input>

        <output>
            <endpoint>tcp://127.0.0.1:5555</endpoint>
            <binary>
                <id>O0</id>
                <name>tank-3.powered</name>
            </binary>
            <binary>
                <id>O1</id>
                <name>tank-2.powered</name>
            </binary>
            <analog>
                <id>O2</id>
                <name>tank-3.tank_level</name>
            </analog>
            <analog>
                <id>O3</id>
                <name>tank-1.temperature</name>
            </analog>
        </output>
    </field-device>
</SCEPTRE>
