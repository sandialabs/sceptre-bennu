<?xml version="1.0" encoding="utf-8"?>
<SCEPTRE>
    <field-device>
        <name>fep-1</name>
        <comms>
            <modbus-client>
                <modbus-connection>
                    <endpoint>/dev/ttySerial1</endpoint>
                    <input-register>
                        <address>30000</address>
                        <max-value>1000</max-value>
                        <min-value>0</min-value>
                        <tag>load-power</tag>
                    </input-register>
                    <discrete-input>
                        <address>10000</address>
                        <tag>load-breaker-status</tag>
                    </discrete-input>
                    <discrete-input>
                        <address>10001</address>
                        <tag>gen-status</tag>
                    </discrete-input>
                    <coil>
                        <address>0</address>
                        <tag>load-breaker-toggle</tag>
                    </coil>
                    <coil>
                        <address>1</address>
                        <tag>gen-power</tag>
                    </coil>
                    <holding-register>
                        <address>40000</address>
                        <max-value>1000</max-value>
                        <min-value>0</min-value>
                        <tag>load-mw-setpoint</tag>
                    </holding-register>
                </modbus-connection>
                <command-interface>tcp://127.0.0.1:1330</command-interface>
            </modbus-client>
        </comms>
    </field-device>
</SCEPTRE>
