<?xml version="1.0" encoding="utf-8"?>
<SCEPTRE>
    <field-device>
        <name>rtu-1</name>
        <cycle-time>1000</cycle-time>
        <tags>
            <external-tag>
                <name>bus-1.gen_mw</name>
                <io>I0</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>load-power</name>
                <io>I1</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>generator-1_bus-1.active</name>
                <io>I2</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>brkr</name>
                <io>I3</io>
                <type>binary</type>
            </external-tag>

            <external-tag>
                <name>load-breaker-toggle</name>
                <io>O0</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>generator-1_bus-1.active</name>
                <io>O1</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>bus-1.gen_mw</name>
                <io>O2</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>load-mw-setpoint</name>
                <io>O3</io>
                <type>analog</type>
            </external-tag>

            <internal-tag>
                <name>machine_power</name>
                <status>false</status>
            </internal-tag>
            <internal-tag>
                <name>machine_powered_time</name>
                <value>0.0</value>
            </internal-tag>
        </tags>

        <comms>
            <bacnet-server>
                <endpoint>udp://127.0.0.1:47808</endpoint>
                <instance>1234</instance>
                <event-logging>rtu-1-bacnet-server.log</event-logging>
                <binary-input>
                    <address>0</address>
                    <tag>brkr</tag>
                </binary-input>
                <binary-input>
                    <address>1</address>
                    <tag>generator-1_bus-1.active</tag>
                </binary-input>
                <binary-output>
                    <address>2</address>
                    <tag>load-breaker-toggle</tag>
                </binary-output>
                <binary-output>
                    <address>3</address>
                    <tag>generator-1_bus-1.active</tag>
                </binary-output>

                <analog-input>
                    <address>0</address>
                    <tag>load-power</tag>
                </analog-input>
                <analog-input>
                    <address>1</address>
                    <tag>bus-1.gen_mw</tag>
                </analog-input>
                <analog-output>
                    <address>2</address>
                    <tag>load-mw-setpoint</tag>
                </analog-output>
                <analog-output>
                    <address>3</address>
                    <tag>bus-1.gen_mw</tag>
                </analog-output>
            </bacnet-server>
        </comms>

        <input>
            <endpoint>udp://239.0.0.1:40000</endpoint>
            <analog>
                <id>I0</id>
                <name>bus-1.gen_mw</name>
            </analog>
            <analog>
                <id>I1</id>
                <name>load-1_bus-1.mw</name>
            </analog>
            <binary>
                <id>I2</id>
                <name>generator-1_bus-1.active</name>
            </binary>
            <binary>
                <id>I3</id>
                <name>load-1_bus-1.active</name>
            </binary>
        </input>

        <output>
            <endpoint>tcp://127.0.0.1:5555</endpoint>
            <binary>
                <id>O0</id>
                <name>load-1_bus-1.active</name>
            </binary>
            <binary>
                <id>O1</id>
                <name>generator-1_bus-1.active</name>
            </binary>
            <analog>
                <id>O2</id>
                <name>bus-1.gen_mw</name>
            </analog>
            <analog>
                <id>O3</id>
                <name>load-1_bus-1.mw</name>
            </analog>
        </output>
    </field-device>
</SCEPTRE>
