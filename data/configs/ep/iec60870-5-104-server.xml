<?xml version="1.0" encoding="utf-8"?>
<SCEPTRE>
    <field-device>
        <name>rtu-1</name>
        <cycle-time>500</cycle-time>
        <tags>
            <external-tag>
                <name>I_bus-1.gen_mw</name>
                <io>I0</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>I_load-1_bus-1.mw</name>
                <io>I1</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>I_generator-1_bus-1.active</name>
                <io>I2</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>I_load-1_bus-1.active</name>
                <io>I3</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>O_load-1_bus-1.active</name>
                <io>O0</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>O_generator-1_bus-1.active</name>
                <io>O1</io>
                <type>binary</type>
            </external-tag>
            <external-tag>
                <name>O_bus-1.gen_mw</name>
                <io>O2</io>
                <type>analog</type>
            </external-tag>
            <external-tag>
                <name>O_load-1_bus-1.mw</name>
                <io>O3</io>
                <type>analog</type>
            </external-tag>

            <internal-tag>
                <name>machine_power</name>
                <status>false</status>
            </internal-tag>
            <internal-tag>
                <name>machine_powered_time</name>
                <value>0.0</value>
            </internal-tag>
        </tags>

        <comms>
            <iec60870-5-104-server>
                <rpoll-rate>1</rpoll-rate>
                <endpoint>tcp://127.0.0.1:2404</endpoint>
                <event-logging>rtu-1-104-outstation.log</event-logging>
                <binary-input>
                    <address>100</address>
                    <tag>I_generator-1_bus-1.active</tag>
                </binary-input>
                <binary-input>
                    <address>101</address>
                    <tag>I_load-1_bus-1.active</tag>
                </binary-input>
                <analog-input>
                    <address>102</address>
                    <tag>I_bus-1.gen_mw</tag>
                </analog-input>
                <analog-input>
                    <address>103</address>
                    <tag>I_load-1_bus-1.mw</tag>
                </analog-input>
                <binary-output>
                    <address>0</address>
                    <tag>O_generator-1_bus-1.active</tag>
                </binary-output>
                <binary-output>
                    <address>1</address>
                    <tag>O_load-1_bus-1.active</tag>
                </binary-output>
                <analog-output>
                    <address>2</address>
                    <tag>O_bus-1.gen_mw</tag>
                </analog-output>
                <analog-output>
                    <address>3</address>
                    <tag>O_load-1_bus-1.mw</tag>
                </analog-output>
            </iec60870-5-104-server>
        </comms>

        <input>
            <endpoint>udp://239.0.0.1:40000</endpoint>
            <analog>
                <id>I0</id>
                <name>bus-1.gen_mw</name>
            </analog>
            <analog>
                <id>I1</id>
                <name>load-1_bus-1.mw</name>
            </analog>
            <binary>
                <id>I2</id>
                <name>generator-1_bus-1.active</name>
            </binary>
            <binary>
                <id>I3</id>
                <name>load-1_bus-1.active</name>
            </binary>
        </input>

        <output>
            <endpoint>tcp://127.0.0.1:5555</endpoint>
            <binary>
                <id>O0</id>
                <name>load-1_bus-1.active</name>
            </binary>
            <binary>
                <id>O1</id>
                <name>generator-1_bus-1.active</name>
            </binary>
            <analog>
                <id>O2</id>
                <name>bus-1.gen_mw</name>
            </analog>
            <analog>
                <id>O3</id>
                <name>load-1_bus-1.mw</name>
            </analog>
        </output>
    </field-device>
</SCEPTRE>
